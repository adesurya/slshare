<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Admin dashboard CSS -->
  <link rel="stylesheet" href="/css/admin-styles.css">
  <!-- Additional CSS for specific pages -->
  <% if (typeof pageCss !== 'undefined') { %>
    <link rel="stylesheet" href="<%= pageCss %>">
  <% } %>
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-light">
      <div class="sidebar-header">
        <h3><a href="/admin/dashboard">MOVA Admin</a></h3>
      </div>

      <ul class="list-unstyled components">
        <li class="<%= section === 'dashboard' ? 'active' : '' %>">
          <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        </li>
        <li class="<%= section === 'users' ? 'active' : '' %>">
          <a href="/admin/users"><i class="fas fa-users"></i> Users</a>
        </li>
        <li class="<%= section === 'brands' ? 'active' : '' %>">
          <a href="/admin/brands"><i class="fas fa-tags"></i> Brands</a>
        </li>
        <li class="<%= section === 'products' ? 'active' : '' %>">
          <a href="/admin/products"><i class="fas fa-shopping-cart"></i> Products</a>
        </li>
        <li class="<%= section === 'transactions' ? 'active' : '' %>">
          <a href="/admin/transactions"><i class="fas fa-exchange-alt"></i> Transactions</a>
        </li>
        <li class="<%= section === 'settings' ? 'active' : '' %>">
          <a href="/admin/dashboard/settings"><i class="fas fa-cogs"></i> Settings</a>
        </li>
        <li class="<%= section === 'logs' ? 'active' : '' %>">
          <a href="/admin/dashboard/logs"><i class="fas fa-clipboard-list"></i> System Logs</a>
        </li>
      </ul>

      <div class="sidebar-footer">
        <span>MOVA Admin v1.0</span>
      </div>
    </nav>

    <!-- Page Content -->
    <div id="content">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <button id="sidebarCollapse" class="btn btn-dark">
            <i class="fas fa-bars"></i>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-user-circle me-1"></i>
                  <%= admin.username %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="/admin/profile"><i class="fas fa-user me-1"></i> My Profile</a></li>
                  <li><a class="dropdown-item" href="/admin/change-password"><i class="fas fa-key me-1"></i> Change Password</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/admin/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <div class="content-wrapper">
        <!-- Page Title and Breadcrumb -->
        <div class="page-header">
          <h1><%= title %></h1>
          <% if (typeof breadcrumbs !== 'undefined') { %>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <% breadcrumbs.forEach(function(crumb) { %>
                  <% if (crumb.active) { %>
                    <li class="breadcrumb-item active" aria-current="page"><%= crumb.text %></li>
                  <% } else { %>
                    <li class="breadcrumb-item"><a href="<%= crumb.url %>"><%= crumb.text %></a></li>
                  <% } %>
                <% }) %>
              </ol>
            </nav>
          <% } %>
        </div>

        <!-- Alert Messages -->
        <% if (typeof successMessage !== 'undefined' && successMessage) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-1"></i> <%= successMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-1"></i> <%= errorMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <ul class="mb-0">
              <% errors.forEach(function(error) { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- Page Content -->
        <%- body %>
      </div>

      <!-- Footer -->
      <footer class="footer mt-auto py-3 bg-light">
        <div class="container-fluid">
          <span class="text-muted">&copy; <%= new Date().getFullYear() %> MOVA Admin Panel. All rights reserved.</span>
        </div>
      </footer>
    </div>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery (necessary for some Bootstrap features) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <!-- Admin scripts -->
  <script src="/js/admin-scripts.js"></script>
  
  <!-- Page specific JavaScript -->
  <% if (typeof pageScript !== 'undefined') { %>
    <script src="<%= pageScript %>"></script>
  <% } %>

  <script>
    // Sidebar toggle functionality
    $(document).ready(function () {
      $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
      });

      // Auto dismiss alerts after 5 seconds
      setTimeout(function() {
        $('.alert').alert('close');
      }, 5000);
    });
  </script>
</body>
</html>