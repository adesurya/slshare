<header class="admin-header">
    <div class="header-left">
      <button class="sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
      </button>
      
      <div class="search-bar">
        <i class="fas fa-search search-icon"></i>
        <input type="search" class="form-control" placeholder="Search...">
      </div>
    </div>
    
    <div class="header-right">
      <div class="notification-bell">
        <i class="fas fa-bell"></i>
        <% if (locals.notifications && notifications.length > 0) { %>
          <span class="notification-badge"><%= notifications.length %></span>
        <% } %>
      </div>
      
      <div class="dropdown">
        <div class="user-profile" data-bs-toggle="dropdown">
          <div class="user-avatar">
            <% if (locals.admin && admin.username) { %>
              <%= admin.username.charAt(0).toUpperCase() %>
            <% } else { %>
              <i class="fas fa-user"></i>
            <% } %>
          </div>
          <div class="user-info">
            <div class="user-name"><%= locals.admin ? admin.username : 'Admin' %></div>
            <div class="user-role"><%= locals.admin ? (admin.role.charAt(0).toUpperCase() + admin.role.slice(1)) : 'Admin' %></div>
          </div>
          <i class="fas fa-chevron-down ms-1 text-muted" style="font-size: 0.8rem;"></i>
        </div>
        
        <ul class="dropdown-menu dropdown-menu-end">
          <li>
            <div class="dropdown-item-text">
              <div class="fw-bold"><%= locals.admin ? (admin.full_name || admin.username) : 'Admin User' %></div>
              <div class="small text-muted"><%= locals.admin ? (admin.role.charAt(0).toUpperCase() + admin.role.slice(1)) : 'Admin' %></div>
            </div>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/admin/profile">
            <i class="fas fa-user-circle me-2"></i> My Profile
          </a></li>
          <li><a class="dropdown-item" href="/admin/profile/password">
            <i class="fas fa-key me-2"></i> Change Password
          </a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item text-danger" href="/admin/auth/logout">
            <i class="fas fa-sign-out-alt me-2"></i> Logout
          </a></li>
        </ul>
      </div>
    </div>
  </header>