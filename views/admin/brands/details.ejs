<!-- Brand Details Page -->
<div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Brand Details: <%= brand.name %></h5>
          <div class="card-actions">
            <a href="/admin/brands" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-arrow-left"></i> Back to Brands
            </a>
            <a href="/admin/brands/<%= brand.id %>/edit" class="btn btn-sm btn-primary">
              <i class="fas fa-edit"></i> Edit Brand
            </a>
            <a href="/admin/brands/<%= brand.id %>/delete" class="btn btn-sm btn-danger">
              <i class="fas fa-trash"></i> Delete Brand
            </a>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <!-- Brand Information -->
              <div class="mb-4">
                <h6 class="fw-bold mb-3">Brand Information</h6>
                <table class="table table-hover">
                  <tbody>
                    <tr>
                      <th style="width: 180px;">Brand Name</th>
                      <td><%= brand.name %></td>
                    </tr>
                    <tr>
                      <th>Cashback Percentage</th>
                      <td><%= brand.cashback_percentage %>%</td>
                    </tr>
                    <tr>
                      <th>Products Count</th>
                      <td><%= brand.products_count || 0 %></td>
                    </tr>
                    <tr>
                      <th>Priority Level</th>
                      <td>
                        <form action="/admin/brands/<%= brand.id %>/update-priority" method="POST" class="d-flex align-items-center">
                          <input type="number" class="form-control form-control-sm" name="priority" value="<%= brand.priority || 0 %>" min="0" max="100" style="width: 80px;">
                          <button type="submit" class="btn btn-sm btn-outline-primary ms-2">Update</button>
                        </form>
                      </td>
                    </tr>
                    <tr>
                      <th>Description</th>
                      <td><%= brand.description %></td>
                    </tr>
                    <tr>
                      <th>Created At</th>
                      <td><%= new Date(brand.created_at).toLocaleString() %></td>
                    </tr>
                    <tr>
                      <th>Updated At</th>
                      <td><%= brand.updated_at ? new Date(brand.updated_at).toLocaleString() : 'Never' %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="col-md-4">
              <!-- Brand Logo -->
              <div class="text-center">
                <h6 class="fw-bold mb-3">Brand Logo</h6>
                <div class="mb-3">
                  <img src="<%= brand.logo_url %>" alt="<%= brand.name %>" class="img-fluid rounded" style="max-height: 200px; max-width: 100%;">
                </div>
                <a href="/admin/brands/<%= brand.id %>/edit" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-upload"></i> Update Logo
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Brand Products -->
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title">Products for <%= brand.name %></h5>
          <div class="card-actions">
            <a href="/admin/products/brand/<%= brand.name %>" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-list"></i> View All
            </a>
            <a href="/admin/products/new?brand=<%= brand.name %>" class="btn btn-sm btn-primary">
              <i class="fas fa-plus"></i> Add Product
            </a>
          </div>
        </div>
        <div class="card-body">
          <% if (products && products.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Cashback</th>
                    <th>Category</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach(function(product) { %>
                    <tr>
                      <td>
                        <img src="<%= product.image_url %>" alt="<%= product.name %>" width="40" height="40" class="product-thumbnail">
                      </td>
                      <td><a href="/admin/products/<%= product.id %>"><%= product.name %></a></td>
                      <td>Rp<%= Number(product.price).toLocaleString('id-ID') %></td>
                      <td><%= product.cashback_percentage %>%</td>
                      <td><%= product.category %></td>
                      <td class="table-actions">
                        <a href="/admin/products/<%= product.id %>" class="btn btn-sm btn-info" title="View">
                          <i class="fas fa-eye"></i>
                        </a>
                        <a href="/admin/products/<%= product.id %>/edit" class="btn btn-sm btn-primary" title="Edit">
                          <i class="fas fa-edit"></i>
                        </a>
                        <a href="/admin/products/<%= product.id %>/delete" class="btn btn-sm btn-danger" title="Delete">
                          <i class="fas fa-trash"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% if (products.length >= 5) { %>
              <div class="text-center mt-3">
                <a href="/admin/products/brand/<%= brand.name %>" class="btn btn-outline-primary">
                  See All Products
                </a>
              </div>
            <% } %>
          <% } else { %>
            <div class="alert alert-info">
              <p class="mb-0">
                <i class="fas fa-info-circle me-2"></i>
                No products found for this brand.
                <a href="/admin/products/new?brand=<%= brand.name %>" class="alert-link">Add a product</a> to get started.
              </p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>