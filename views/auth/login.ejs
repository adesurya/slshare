<%- include('../layout', { 
    body: `
    <div class="auth-container">
      <div class="auth-header">
        <h1>Login to MOVA</h1>
        <p>Belanja Sambil Cuan, dapatkan cashback untuk setiap pembelian</p>
      </div>
  
      <% if (errors && errors.length > 0) { %>
        <div class="error-message">
          <% errors.forEach(error => { %>
            <p><%= error.msg %></p>
          <% }); %>
        </div>
      <% } %>
  
      <form class="auth-form" action="/auth/login" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" value="<%= locals.formData ? formData.username : '' %>" required>
        </div>
  
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>
        </div>
  
        <div class="form-options">
          <div class="remember-me">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember">Remember me</label>
          </div>
          <a href="/auth/forgot-password" class="forgot-password">Forgot password?</a>
        </div>
  
        <button type="submit" class="auth-button">Login</button>
      </form>
  
      <div class="auth-alternative">
        <p>Don't have an account? <a href="/auth/register">Register</a></p>
      </div>
    </div>
    `,
    title,
    currentPage: 'profile',
    showSearchBar: false,
    scripts: ''
  }) %>