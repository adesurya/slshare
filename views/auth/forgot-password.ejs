<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="header-content">
      <div class="logo">
        <a href="/">MOVA</a>
        <span class="tagline">Belanja Sambil Cuan</span>
      </div>
      <div class="header-right">
        <a href="/faq" class="faq-link">FAQ</a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="main-content">
    <div class="auth-container">
      <div class="auth-header">
        <h1>Forgot Password</h1>
        <p>Enter your email address to receive a password reset link</p>
      </div>
  
      <% if (locals.errors && errors.length > 0) { %>
        <div class="error-message">
          <% errors.forEach(function(error) { %>
            <p><%= error.msg %></p>
          <% }); %>
        </div>
      <% } %>
  
      <form class="auth-form" action="/auth/forgot-password" method="POST">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" value="<%= locals.formData ? formData.email : '' %>" required>
        </div>
  
        <button type="submit" class="auth-button">Send Reset Link</button>
      </form>
  
      <div class="auth-alternative">
        <p>Remember your password? <a href="/auth/login">Login</a></p>
      </div>
    </div>
  </main>

  <!-- Bottom Navigation -->
  <nav class="bottom-nav">
    <a href="/" class="nav-item">
      <i class="fas fa-home"></i>
      <span>Beranda</span>
    </a>
    <a href="/brands" class="nav-item">
      <i class="fas fa-tag"></i>
      <span>Brand</span>
    </a>
    <a href="/user/dashboard" class="nav-item">
      <i class="fas fa-wallet"></i>
      <span>Pendapatan</span>
    </a>
    <a href="/user/profile" class="nav-item active">
      <i class="fas fa-user"></i>
      <span>Saya</span>
    </a>
  </nav>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <style>
    .auth-container {
      padding: 20px;
      max-width: 500px;
      margin: 0 auto;
    }
    
    .auth-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .auth-header h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }
    
    .auth-header p {
      color: var(--light-text);
    }
    
    .error-message {
      background-color: rgba(220, 53, 69, 0.1);
      border-left: 3px solid var(--error-color);
      padding: 10px 15px;
      margin-bottom: 20px;
      color: var(--error-color);
    }
    
    .auth-form {
      background-color: white;
      border-radius: var(--border-radius);
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: var(--box-shadow);
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }
    
    .form-group input {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid var(--border-color);
      border-radius: var(--border-radius);
    }
    
    .auth-button {
      width: 100%;
      padding: 12px;
      background-color: var(--primary-color);
      color: white;
      border-radius: var(--border-radius);
      font-weight: bold;
      margin-top: 10px;
      border: none;
      cursor: pointer;
    }
    
    .auth-alternative {
      text-align: center;
    }
    
    .auth-alternative a {
      color: var(--primary-color);
      font-weight: bold;
    }
  </style>
    <script src="/js/page-specific-fix.js"></script>
</body>
</html>